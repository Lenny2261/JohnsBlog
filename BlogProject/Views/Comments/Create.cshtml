@model BlogProject.Models.Comment

@{
    ViewBag.Title = "Create";
    Layout = null;
}

@Html.AntiForgeryToken()

<div class="form-horizontal">

    <div class="form-group">
        <div class="row">
            <div class="col-md-12">
                @Html.LabelFor(model => model.body, "Leave a Comment", htmlAttributes: new { @class = "control-label" })
                <br />
                <br />
                @Html.TextAreaFor(model => model.body, new { rows = 7, cols = 50, @class = "textAreaLong", htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.body, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
    <div class="form-group">
        <div class="col-md-12 ridOfLeft">
            <div class="blog-content">
                <button class="btn btn-dafault btn-details" id="btnSendComment" type="submit">Comment</button>
            </div>
        </div>
    </div>
    }
    else
    {
    <div class="col-md-12 ridOfLeft">
        <div class="blog-content">
            <a class="btn btn-dafault btn-details" href="@Url.Action("Login", "Account")">Login To Comment</a>
        </div>
    </div>
    }
</div>

